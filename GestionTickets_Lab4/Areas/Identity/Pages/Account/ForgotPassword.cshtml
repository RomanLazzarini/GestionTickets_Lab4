@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar Contraseña";
}

<style>
    .forgot-bg {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        /* Mismo cálculo de altura para evitar scroll */
        min-height: calc(100vh - 140px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 20px;
        padding-bottom: 20px;
    }

    .forgot-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        background-color: rgba(255, 255, 255, 0.95);
        overflow: hidden;
    }

    .forgot-header {
        /* Usamos Warning (Naranja/Amarillo) para indicar "Alerta" o Recuperación */
        background-color: #ffc107;
        color: #212529; /* Texto oscuro para que se lea bien sobre el amarillo */
        padding: 20px;
        text-align: center;
    }
</style>

<div class="forgot-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">

                <div class="card forgot-card animate__animated animate__fadeInDown">
                    <div class="forgot-header">
                        <h3 class="mb-0 fw-bold"><i class="bi bi-question-circle-fill"></i> Recuperar</h3>
                        <small>Restablecer Acceso</small>
                    </div>

                    <div class="card-body p-4">
                        <p class="text-center text-muted small mb-4">
                            Ingrese su correo electrónico y le enviaremos un enlace para restablecer su contraseña.
                        </p>

                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center small"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email"><i class="bi bi-envelope"></i> Correo Electrónico</label>
                                <span asp-validation-for="Input.Email" class="text-danger small"></span>
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-warning btn-lg fw-bold shadow-sm">
                                    ENVIAR ENLACE
                                </button>
                            </div>

                            <div class="text-center mt-3">
                                <a asp-page="./Login" class="text-decoration-none fw-bold text-primary small">
                                    <i class="bi bi-arrow-left"></i> Volver al Login
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="text-center mt-3 text-muted small">
                    &copy; 2026 - Clínica UTN Salud
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}