@{
    ViewData["Title"] = "Panel de Control";
}

<div class="text-center mt-4">
    <h1 class="display-4 mb-3">Clínica <span class="text-primary fw-bold">UTN Salud</span></h1>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="card shadow-sm mx-auto" style="max-width: 500px;">
            <div class="card-body p-5">
                <i class="bi bi-hospital fs-1 text-primary mb-3"></i>
                <h3 class="card-title">Acceso al Sistema</h3>
                <p class="card-text text-muted mb-4">
                    Bienvenido al sistema de gestión de reclamos y afiliados.
                    Por favor, inicie sesión para continuar.
                </p>
                <a class="btn btn-primary btn-lg w-100" asp-area="Identity" asp-page="/Account/Login">
                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                </a>
            </div>
        </div>
    }
    else
    {
        <p class="lead mb-5">Bienvenido, <strong>@User.Identity.Name</strong>. ¿Qué desea hacer hoy?</p>

        <div class="row justify-content-center">

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-primary">
                    <div class="card-body">
                        <h2 class="text-primary"><i class="bi bi-ticket-perforated"></i></h2>
                        <h5 class="card-title mt-3">Gestionar Tickets</h5>
                        <p class="card-text text-muted">Administre los reclamos, vea el historial y cambie estados.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Tickets" asp-action="Create" class="btn btn-outline-primary">Nuevo Reclamo</a>
                            <a asp-controller="Tickets" asp-action="Index" class="btn btn-primary">Ver Listado</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm border-success">
                    <div class="card-body">
                        <h2 class="text-success"><i class="bi bi-people"></i></h2>
                        <h5 class="card-title mt-3">Afiliados</h5>
                        <p class="card-text text-muted">Busque afiliados, registre nuevos socios o actualice datos.</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Afiliados" asp-action="Index" class="btn btn-success">Buscar Afiliado</a>
                        </div>
                    </div>
                </div>
            </div>

            @if (User.IsInRole("Administrador") || User.IsInRole("Asistente"))
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm border-secondary">
                        <div class="card-body">
                            <h2 class="text-secondary"><i class="bi bi-gear"></i></h2>
                            <h5 class="card-title mt-3">Configuración</h5>
                            <p class="card-text text-muted small">ABM de Estados y paramétricas del sistema.</p>
                            <a asp-controller="Estados" asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Ver Estados</a>
                        </div>
                    </div>
                </div>
            }

        </div>
    }
</div>