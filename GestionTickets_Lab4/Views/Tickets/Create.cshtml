@model GestionTickets_Lab4.Models.Ticket

@{
    ViewData["Title"] = "Nuevo Reclamo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-ticket-perforated-fill"></i> Registrar Nuevo Reclamo
                    </h4>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-4">
                            <label asp-for="AfiliadoId" class="control-label fw-bold mb-1">Seleccione el Afiliado</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-person-badge"></i></span>
                                <select asp-for="AfiliadoId" class="form-select" asp-items="ViewBag.AfiliadoId"></select>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Observacion" class="control-label fw-bold mb-1">Detalle del Problema / Solicitud</label>
                            <textarea asp-for="Observacion" class="form-control" rows="4" placeholder="Describa aquí el motivo del reclamo..."></textarea>
                            <span asp-validation-for="Observacion" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-lg"></i> Crear Ticket
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}