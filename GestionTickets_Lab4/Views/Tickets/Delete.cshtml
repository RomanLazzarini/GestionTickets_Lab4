@model GestionTickets_Lab4.Models.Ticket

@{
    ViewData["Title"] = "Eliminar Ticket";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-trash3-fill"></i> Eliminar Ticket
                    </h4>
                </div>

                <div class="card-body p-4">

                    <div class="text-center mb-4">
                        <h5 class="text-danger fw-bold">¿Está seguro de eliminar este ticket?</h5>
                        <p class="text-muted small">Esta acción no se puede deshacer y perderá el registro de la solicitud.</p>
                    </div>

                    <div class="card border-danger mb-4 shadow-sm" style="border-left: 5px solid #dc3545;">
                        <div class="card-body">

                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge bg-secondary">Ticket #@Model.Id</span>
                                <span class="text-muted small">
                                    <i class="bi bi-calendar-event me-1"></i> @Model.FechaSolicitud.ToString("dd/MM/yyyy")
                                </span>
                            </div>

                            <div class="d-flex align-items-center mb-3 p-2 bg-light rounded">
                                <div class="bg-white p-2 rounded-circle border me-3 text-secondary">
                                    <i class="bi bi-person-fill fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted text-uppercase d-block" style="font-size: 0.7rem;">Solicitante</small>
                                    <span class="fw-bold text-dark">
                                        @Html.DisplayFor(model => model.Afiliado.Apellido), @Html.DisplayFor(model => model.Afiliado.Nombres)
                                    </span>
                                </div>
                            </div>

                            <div class="mb-2">
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Detalle de la Solicitud</small>
                                <div class="p-2 border rounded bg-light text-secondary fst-italic">
                                    <i class="bi bi-chat-quote-fill me-2 opacity-25"></i>
                                    "@Html.DisplayFor(model => model.Observacion)"
                                </div>
                            </div>

                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                <i class="bi bi-x-circle"></i> Sí, Eliminar Ticket
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-return-left"></i> Cancelar
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>