@model GestionTickets_Lab4.Models.Ticket

@{
    ViewData["Title"] = "Historial del Reclamo";
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Ticket #@Model.Id</h4>
            <span class="badge bg-light text-dark">@Model.FechaSolicitud.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="text-muted">Afiliado</h5>
                    <p class="fs-5">
                        <i class="bi bi-person-circle"></i>
                        @if (Model.Afiliado != null)
                        {
                            <span>@Model.Afiliado.Apellido, @Model.Afiliado.Nombres</span>
                        }
                        else
                        {

                            <span>Afiliado Eliminado</span>
                        }
                    </p>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted">Observación Inicial</h5>
                    <p class="fs-5">@Model.Observacion</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3 text-secondary"><i class="bi bi-clock-history"></i> Historial de Movimientos</h4>

    <div class="timeline mb-5">
        @if (Model.Detalles != null && Model.Detalles.Any())
        {
            // Ordenamiento cronológico
            foreach (var detalle in Model.Detalles.OrderBy(d => d.FechaEstado))
            {
                // 1. LÓGICA DE COLORES E ICONOS ADAPTADA A LOS DATOS
                string bordeColor = "border-secondary";
                string icono = "bi-circle";
                string textoColor = "text-secondary";

                if (detalle.Estado.Descripcion == "Pendiente")
                {
                    bordeColor = "border-danger";       // Rojo
                    textoColor = "text-danger";
                    icono = "bi-exclamation-circle";
                }
                else if (detalle.Estado.Descripcion == "En Proceso")
                {
                    bordeColor = "border-warning";      // Amarillo
                    textoColor = "text-warning";
                    icono = "bi-hourglass-split";
                }
                else if (detalle.Estado.Descripcion == "Resuelto")
                {
                    bordeColor = "border-success";      // Verde
                    textoColor = "text-success";
                    icono = "bi-check-circle-fill";
                }

                // 2. LA TARJETA VISUAL
                <div class="card mb-3 shadow-sm @bordeColor" style="border-left: 5px solid; border-radius: 5px;">
                    <div class="card-body py-2">
                        <div class="d-flex justify-content-between align-items-center">

                            <h6 class="mb-1 fw-bold">
                                Estado: <span class="@textoColor">@detalle.Estado.Descripcion</span>
                            </h6>

                            <small class="text-muted">@detalle.FechaEstado.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>

                        <p class="mb-0 text-secondary small mt-2">
                            <i class="bi @icono me-1"></i>
                            @detalle.DescripcionPedido
                        </p>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning">No hay detalles en este ticket.</div>
        }
    </div>

    <div class="card border-primary">
        <div class="card-header bg-light">
            <strong>Actualizar Estado / Agregar Comentario</strong>
        </div>
        <div class="card-body">
            <form asp-action="AgregarDetalle" method="post">
                <input type="hidden" name="TicketId" value="@Model.Id" />

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Nuevo Estado</label>
                        <select name="EstadoId" class="form-select" asp-items="ViewBag.ListaEstados"></select>
                    </div>

                    <div class="col-md-8 mb-3">
                        <label class="form-label">Observación / Respuesta</label>
                        <textarea name="Observacion" class="form-control" rows="2" placeholder="Escriba la evolución del caso..." required></textarea>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="Index" class="btn btn-secondary me-md-2">Volver</a>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-send"></i> Guardar Evolución
                    </button>
                </div>
            </form>
        </div>
    </div>
    <br /><br />
</div>