@model IEnumerable<GestionTickets_Lab4.Models.Estado>

@{
    ViewData["Title"] = "Configuración de Estados";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-sliders"></i> Gestión de Estados</h2>
            <p class="text-muted">Administre los estados disponibles para el ciclo de vida de los tickets.</p>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
            <i class="bi bi-plus-lg"></i> Nuevo Estado
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover table-striped align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4 py-3">Descripción / Nombre</th>
                        <th class="text-center">Vista Previa (Color)</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        // Lógica visual para mostrar la "etiqueta" tal cual se ve en el ticket
                        string badgeClass = "bg-secondary";
                        string icono = "bi-circle";

                        if (item.Descripcion == "Pendiente")
                        {
                            badgeClass = "bg-danger";
                            icono = "bi-exclamation-circle";
                        }
                        else if (item.Descripcion == "En Proceso")
                        {
                            badgeClass = "bg-warning text-dark";
                            icono = "bi-hourglass-split";
                        }
                        else if (item.Descripcion == "Resuelto")
                        {
                            badgeClass = "bg-success";
                            icono = "bi-check-circle-fill";
                        }

                        <tr>
                            <td class="ps-4 fw-bold">
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td class="text-center">
                                <span class="badge rounded-pill @badgeClass px-3 py-2">
                                    <i class="bi @icono me-1"></i> @item.Descripcion
                                </span>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm" title="Detalles">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>