@model GestionTickets_Lab4.Models.Estado

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow border-0">
                <div class="card-header bg-info text-white text-center py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-info-circle"></i> Detalles del Estado</h4>
                </div>

                <div class="card-body p-5 text-center">

                    @{
                        string badgeClass = "bg-secondary";
                        string icono = "bi-circle";

                        if (Model.Descripcion == "Pendiente")
                        {
                            badgeClass = "bg-danger";
                            icono = "bi-exclamation-circle";
                        }
                        else if (Model.Descripcion == "En Proceso")
                        {
                            badgeClass = "bg-warning text-dark";
                            icono = "bi-hourglass-split";
                        }
                        else if (Model.Descripcion == "Resuelto")
                        {
                            badgeClass = "bg-success";
                            icono = "bi-check-circle-fill";
                        }
                    }

                    <h6 class="text-muted text-uppercase small ls-1 mb-2">Nombre del Estado</h6>
                    <h2 class="fw-bold mb-4">@Html.DisplayFor(model => model.Descripcion)</h2>

                    <hr class="my-4 text-muted opacity-25">

                    <h6 class="text-muted text-uppercase small ls-1 mb-3">Vista Previa en el Sistema</h6>

                    <div class="mb-4">
                        <span class="badge rounded-pill @badgeClass px-4 py-3 fs-5 shadow-sm">
                            <i class="bi @icono me-2"></i> @Model.Descripcion
                        </span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-4">
                            <i class="bi bi-pencil-square"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Volver a la Lista
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>