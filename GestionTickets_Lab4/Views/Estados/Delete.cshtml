@model GestionTickets_Lab4.Models.Estado

@{
    ViewData["Title"] = "Eliminar Estado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow border-0">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-exclamation-triangle-fill"></i> Eliminar Estado</h4>
                </div>

                <div class="card-body p-4 text-center">

                    <h5 class="card-title text-danger fw-bold mb-3">¿Está seguro de eliminar esto?</h5>
                    <p class="text-muted mb-4">Esta acción podría afectar a los tickets que tengan este estado asignado.</p>

                    @{
                        string badgeClass = "bg-secondary";
                        string icono = "bi-circle";

                        if (Model.Descripcion == "Pendiente")
                        {
                            badgeClass = "bg-danger";
                            icono = "bi-exclamation-circle";
                        }
                        else if (Model.Descripcion == "En Proceso")
                        {
                            badgeClass = "bg-warning text-dark";
                            icono = "bi-hourglass-split";
                        }
                        else if (Model.Descripcion == "Resuelto")
                        {
                            badgeClass = "bg-success";
                            icono = "bi-check-circle-fill";
                        }
                    }

                    <div class="bg-light rounded-3 p-3 mb-4 border">
                        <small class="text-uppercase text-muted ls-1">Estado a eliminar</small>
                        <div class="mt-2">
                            <span class="badge rounded-pill @badgeClass px-3 py-2 fs-6">
                                <i class="bi @icono me-2"></i> @Html.DisplayFor(model => model.Descripcion)
                            </span>
                        </div>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg shadow-sm">
                                <i class="bi bi-trash-fill"></i> Sí, Eliminar Definitivamente
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i> Cancelar
                            </a>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>