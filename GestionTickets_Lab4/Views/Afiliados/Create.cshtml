@model GestionTickets_Lab4.Models.Afiliado

@{
    ViewData["Title"] = "Nuevo Afiliado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-person-plus-fill"></i> Nuevo Afiliado</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center"></div>

                        <h6 class="text-muted text-uppercase small ls-1 mb-3 border-bottom pb-2">
                            <i class="bi bi-person-vcard"></i> Información Personal
                        </h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                                    <label asp-for="Apellido">Apellido</label>
                                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombres" class="form-control" placeholder="Nombres" />
                                    <label asp-for="Nombres">Nombres</label>
                                    <span asp-validation-for="Nombres" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DNI" class="form-control" placeholder="Documento" />
                                    <label asp-for="DNI">Documento (DNI)</label>
                                    <span asp-validation-for="DNI" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                    <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
                                    <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <h6 class="text-muted text-uppercase small ls-1 mb-3 border-bottom pb-2 mt-4">
                            <i class="bi bi-camera"></i> Foto de Perfil
                        </h6>

                        <div class="bg-light rounded p-3 mb-4 border border-dashed">
                            <div class="row align-items-center">
                                <div class="col-auto">
                                    <div class="bg-white p-2 rounded-circle shadow-sm">
                                        <i class="bi bi-image text-primary" style="font-size: 2rem;"></i>
                                    </div>
                                </div>
                                <div class="col">
                                    <label class="form-label fw-bold mb-1">Subir imagen</label>
                                    <input type="file" name="archivoFoto" class="form-control" accept="image/*" />
                                    <div class="form-text small">Formatos permitidos: JPG, PNG, JPEG.</div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Volver a la Lista
                            </a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="bi bi-check-lg"></i> Crear Afiliado
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}