@model GestionTickets_Lab4.Models.Afiliado

@{
    ViewData["Title"] = "Detalles del Afiliado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-sm border-light rounded-3">
                <div class="card-header bg-primary bg-gradient text-white d-flex justify-content-between align-items-center py-3 px-4 rounded-top-3">
                    <h4 class="mb-0 fw-bold"><i class="bi bi-person-vcard me-2"></i> Perfil del Afiliado</h4>
                    <span class="badge bg-light text-primary fs-6 shadow-sm">ID: #@Model.Id</span>
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="row align-items-center">

                        <div class="col-md-4 text-center mb-4 mb-md-0">
                            @if (!string.IsNullOrEmpty(Model.Foto))
                            {
                                <img src="@Model.Foto" alt="Foto de @Model.Nombres"
                                     class="img-fluid rounded-circle shadow-sm border border-3 border-primary object-fit-cover"
                                     style="width: 180px; height: 180px;" />
                            }
                            else
                            {
                                <div class="bg-light rounded-circle shadow-sm border border-3 border-secondary d-flex justify-content-center align-items-center mx-auto" style="width: 180px; height: 180px;">
                                    <i class="bi bi-person text-secondary opacity-50" style="font-size: 7rem;"></i>
                                </div>
                                <p class="text-muted small mt-2 mb-0 fst-italic">Sin foto de perfil</p>
                            }
                        </div>

                        <div class="col-md-8">
                            <h2 class="fw-bold text-dark mb-1 display-6">@Model.Nombres</h2> <h3 class="fw-bold text-secondary mb-4">@Model.Apellido</h3>

                            <hr class="text-muted opacity-25 mb-4" />

                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center mb-3 mb-sm-0 p-3 bg-light rounded border-start border-4 border-primary h-100">
                                        <i class="bi bi-credit-card-2-front fs-2 text-primary me-3 opacity-75"></i>
                                        <div>
                                            <span class="text-muted d-block small text-uppercase fw-bold ls-1">DNI</span>
                                            <span class="fs-5 text-dark fw-medium">@Model.DNI</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="d-flex align-items-center p-3 bg-light rounded border-start border-4 border-info h-100">
                                        <i class="bi bi-calendar-event fs-2 text-info me-3 opacity-75"></i>
                                        <div>
                                            <span class="text-muted d-block small text-uppercase fw-bold ls-1">Nacimiento</span>
                                            <span class="fs-5 text-dark fw-medium">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="card-footer bg-light p-4 d-flex justify-content-between align-items-center rounded-bottom-3">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm fw-medium">
                        <i class="bi bi-arrow-left me-2"></i> Volver a la Lista
                    </a>

                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary px-5 shadow-sm fw-bold ls-1">
                            <i class="bi bi-pencil-square me-2"></i> EDITAR
                        </a>
                    }
                </div>
            </div>

        </div>
    </div>
</div>