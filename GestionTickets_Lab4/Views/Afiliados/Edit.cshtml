@model GestionTickets_Lab4.Models.Afiliado

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Afiliado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Foto" />

            <div class="form-group mb-3">
                <label asp-for="Apellido" class="control-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Nombres" class="control-label"></label>
                <input asp-for="Nombres" class="form-control" />
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="DNI" class="control-label"></label>
                <input asp-for="DNI" class="form-control" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FechaNacimiento" class="control-label"></label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3 p-3 border rounded bg-light">
                <label class="control-label fw-bold d-block mb-2">Foto Actual</label>

                @if (!string.IsNullOrEmpty(Model.Foto))
                {
                    <div class="mb-3 text-center">
                        <img src="@Model.Foto" class="img-thumbnail" style="max-height: 150px;" />
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">Sin foto asignada</p>
                }

                <label class="control-label small text-secondary">Cambiar Foto (Opcional)</label>
                <input type="file" name="archivoFoto" class="form-control" accept="image/*" />
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}