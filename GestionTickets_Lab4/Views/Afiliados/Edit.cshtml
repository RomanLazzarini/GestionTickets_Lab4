@model GestionTickets_Lab4.Models.Afiliado

@{
    ViewData["Title"] = "Editar Afiliado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0 fw-bold"><i class="bi bi-person-gear"></i> Editar Afiliado</h4>
                        <span class="badge bg-white text-primary rounded-pill">ID: @Model.Id</span>
                    </div>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <input type="hidden" asp-for="Foto" />

                        <h6 class="text-muted text-uppercase small ls-1 mb-3 border-bottom pb-2">
                            <i class="bi bi-person-vcard"></i> Datos Personales
                        </h6>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                                    <label asp-for="Apellido">Apellido</label>
                                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Nombres" class="form-control" placeholder="Nombres" />
                                    <label asp-for="Nombres">Nombres</label>
                                    <span asp-validation-for="Nombres" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="DNI" class="form-control" placeholder="DNI" />
                                    <label asp-for="DNI">Documento (DNI)</label>
                                    <span asp-validation-for="DNI" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                                    <label asp-for="FechaNacimiento">Fecha de Nacimiento</label>
                                    <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <h6 class="text-muted text-uppercase small ls-1 mb-3 border-bottom pb-2 mt-4">
                            <i class="bi bi-camera"></i> Foto de Perfil
                        </h6>

                        <div class="row g-3 align-items-center mb-4">
                            <div class="col-md-3 text-center">
                                @if (!string.IsNullOrEmpty(Model.Foto))
                                {
                                    <img src="@Model.Foto" alt="Foto Actual" class="img-thumbnail rounded-circle shadow-sm" style="width: 100px; height: 100px; object-fit: cover;" />
                                    <div class="small text-muted mt-1">Actual</div>
                                }
                                else
                                {
                                    <div class="bg-light rounded-circle d-inline-flex justify-content-center align-items-center shadow-sm" style="width: 100px; height: 100px;">
                                        <i class="bi bi-person text-secondary" style="font-size: 3rem;"></i>
                                    </div>
                                    <div class="small text-muted mt-1">Sin foto</div>
                                }
                            </div>
                            <div class="col-md-9">
                                <label class="form-label text-secondary small">Cambiar foto (Opcional)</label>
                                <input type="file" name="archivoFoto" class="form-control" accept="image/*" />
                                <div class="form-text">Formatos: .jpg, .png, .jpeg</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}